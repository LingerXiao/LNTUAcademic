<view class="page">
  <view class="head-bg-view">
    <image src="{{userInfo.avatarUrl}}" class="head-left"></image>
    <image src="/images/global/school_logo.png" class="head-right"></image>
  </view>
  <view class="blank-view">
    <view class="blank-content">
      <view>
        <text class="blank-content-text">姓名</text>
        <text class="blank-content-text-detail">{{stuDetail.name}}</text>
      </view>
    </view>
  </view>
  <view class="blank-view">
    <view class="blank-content">
      <view>
        <text class="blank-content-text">学号</text>
        <text class="blank-content-text-detail">{{stuDetail.userId}}</text>
      </view>
    </view>
  </view>
  <view class="blank-view">
    <view class="blank-content">
      <view>
        <text class="blank-content-text">微信号</text>
        <text class="blank-content-text-detail">{{userInfo.nickName}}</text>
      </view>
    </view>
  </view>
  <view class="blank-view" wx:if="{{isBind}}">
    <view class="blank-content">
      <view>
        <text class="blank-content-text">绑定时间</text>
        <text class="blank-content-text-detail">{{bindingTime}}</text>
      </view>
    </view>
  </view>
  <view class="button-group">
    <button  wx:if="{{!isBind}}" type="primary" disabled="{{disabled}}" bindtap="bindStuIdWithWeChatId" class="custom-button button-distance">立即绑定</button>
    <button type="default" disabled="{{disabled}}" bindtap="switchAccount" class="custom-button button-distance">切换账号</button>
    <button type="warn" loading="{{loading}}" disabled="{{disabled}}" bindtap="unboundAccount" class="custom-button" wx:if="{{isBind}}">解除绑定</button>
  </view>
</view>