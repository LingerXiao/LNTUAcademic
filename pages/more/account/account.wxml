<view class="page">
    <view class="head-bg-view">
        <image src="/images/global/head1.jpg" class="head-left"></image>
        <image src="/images/global/head2.jpg" class="head-right"></image>
    </view>
    <view class="blank-view" bindtap="navigateToFeedbackPage">
        <view class="blank-content">
            <view>
                <text class="blank-content-text">姓名</text>
                <text class="blank-content-text-detail">{{stuDetail.data.name}}</text>
            </view>
        </view>
    </view>
    <view class="blank-view" bindtap="navigateToFeedbackPage">
        <view class="blank-content">
            <view>
                <text class="blank-content-text">学号</text>
                <text class="blank-content-text-detail">{{stuDetail.data.userId}}</text>
            </view>
        </view>
    </view>
    <view class="blank-view" bindtap="navigateToFeedbackPage">
        <view class="blank-content">
            <view>
                <text class="blank-content-text">微信号</text>
                <text class="blank-content-text-detail">{{weChatId}}</text>
            </view>
        </view>
    </view>
    <view class="blank-view" bindtap="navigateToFeedbackPage">
        <view class="blank-content">
            <view>
                <text class="blank-content-text">绑定时间</text>
                <text class="blank-content-text-detail">{{bindingTime}}</text>
            </view>
        </view>
    </view>
    <view class="button-group">
        <button type="default" loading="{{loading}}" disabled="{{disabled}}" bindtap="switchAccount" class="custom-button button-distance">切换账号</button>
        <button type="warn" loading="{{loading}}" disabled="{{disabled}}" bindtap="unboundAccount" class="custom-button">解除绑定</button>
    </view>
</view>