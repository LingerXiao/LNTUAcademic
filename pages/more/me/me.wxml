<view class="page">

  <!-- 有学籍信息时显示学籍信息 -->
  <view class="user-info-box" bindtap="navigateToAccountPage" wx:if="{{isBind}}">
    <view class="info-hd">
      <image class="user-avatar" src="{{userInfo.avatarUrl}}"></image>
      <view class="user-title">
        <text class="user-name">{{stuDetail.data.name}}</text>
        <text class="stu-id">{{stuDetail.data.userId}}</text>
      </view>
      <view class="user-title">
        <text class="stu-id">{{stuDetail.data.college}}</text>
        <text class="stu-id">{{stuDetail.data.major}}</text>
        <text class="stu-id">{{stuDetail.data.classInfo}}班</text>
      </view>
    </view>
  </view>

  <!-- 没有学籍信息时显示微信账号信息 -->
  <view class="user-info-box" bindtap="navigateToAccountPage" wx:if="!{{isBind}}">
    <view class="info-hd">
      <image class="user-avatar" src="{{userInfo.avatarUrl}}"></image>
      <view class="user-title">
        <text class="user-name">{{userInfo.nickName}}</text>
        <text class="stu-id">{{stuDetail.data.userId}}</text>
      </view>
      <view class="wechat-account-bind-view">
        <text class="wechat-account-bind-text">前往绑定</text>
        <image class="wechat-account-bind-img" src="../../../images/global/detail.png"></image>
      </view>
    </view>
  </view>

  <!-- 反馈 -->
  <view class="blank-view" bindtap="navigateToFeedbackPage">
    <view class="blank-content">
      <image class="blank-content-icon" src="../../../images/global/feedback.png"></image>
      <view>
        <text class="blank-content-text">反馈</text>
      </view>
      <image class="blank-content-detail" src="../../../images/global/detail.png"></image>
    </view>
  </view>

  <!-- 关于 -->
  <view class="blank-view" bindtap="navigateToAboutPage">
    <view class="blank-content">
      <image class="blank-content-icon" src="../../../images/global/about.png"></image>
      <view>
        <text class="blank-content-text">关于</text>
      </view>
      <image class="blank-content-detail" src="../../../images/global/detail.png"></image>
    </view>
  </view>
</view>