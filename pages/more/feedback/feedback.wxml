<view class="page">
    <view class="section">
        <input bindinput="inputFeedbackTitle" placeholder="请输入反馈标题"  />
    </view>
    <view class="section">
        <view class="textarea-view">
            <textarea bindinput="inputFeedbackContent" placeholder="请输入反馈信息"  />
        </view>
    </view>
    <view class="section">
        <input bindinput="inputCotactInfomation" placeholder="您的联系方式（可选）"  />
    </view>
    <view class="button-wrapper">
        <button type="primary" loading="{{loading}}" disabled="{{disabled}}" bindtap="login" class="customButton">提交反馈信息</button>
    </view>
</view>