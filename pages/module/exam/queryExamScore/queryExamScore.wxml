<view class="page">
  <view class="page-section">
    <view class="weui-cells__title">学年学期选择</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">当前选择</view>
        </view>
        <view class="weui-cell__bd">
          <picker bindchange="chooseAcademicYear" value="{{index}}" range="{{academicYears}}">
            <view class="weui-input">{{selectedAcademicYear}}</view>
          </picker>
        </view>
      </view>
    </view>
  </view>
  <view class="button-group">
    <button type="primary" disabled="{{disabled}}" bindtap="queryExamScore" data-type="EXAM_SCORE" class="custom-button button-distance">查询成绩</button>
    <button type="default" disabled="{{disabled}}" bindtap="queryGradePoint" class="custom-button button-distance">查询绩点</button>
    <button type="warn" disabled="{{disabled}}" bindtap="queryExamScore" data-type="NOT_PASSED" class="custom-button button-distance orange">查询未通过课程</button>
  </view>
</view>