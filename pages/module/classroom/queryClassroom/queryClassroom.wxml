<view class="page">
  <view class="page-section">
    <view class="weui-cells__title">选择校区</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">当前选择</view>
        </view>
        <view class="weui-cell__bd">
          <picker bindchange="chooseCampus" value="{{index}}" range="{{campuses}}">
            <view class="weui-input">{{selecetedCampus}}</view>
          </picker>
        </view>
      </view>
    </view>
    <view class="weui-cells__title">选择教学楼</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">当前选择</view>
        </view>
        <view class="weui-cell__bd">
          <picker bindchange="chooseBuilding" disabled="{{!isCampusSelected}}" bindtap="validateBuilding" value="{{index}}" range="{{currentBuildings}}">
            <view class="weui-input">{{selecetedBuilding}}</view>
          </picker>
        </view>
      </view>
    </view>
    <view class="weui-cells__title">选择周</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">当前选择</view>
        </view>
        <view class="weui-cell__bd">
          <picker bindchange="chooseWeek" value="{{index}}" range="{{weeks}}">
            <view class="weui-input">{{selecetedWeek}}</view>
          </picker>
        </view>
      </view>
    </view>
    <view class="weui-cells__title">选择星期</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">当前选择</view>
        </view>
        <view class="weui-cell__bd">
          <picker bindchange="chooseDay" value="{{index}}" range="{{days}}">
            <view class="weui-input">{{selecetedDay}}</view>
          </picker>
        </view>
      </view>
    </view>
  </view>
  <view class="weui-btn-area button-eara-distance">
    <button type="primary" class="weui-btn" disabled="{{disabled}}" bindtap="queryClassroom" data-type="CURRENT_DATE">
      查询当日教室信息
    </button>
    <button type="default" class="weui-btn" disabled="{{disabled}}" bindtap="queryClassroom" data-type="SELECTED_DATE">
      查询教室信息
    </button>
  </view>
</view>