/**app.wxss**/

@import "/common/lib/weui.wxss";
page {
    background-color: #F8F8F8;
    font-size: 16px;
    font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

.page__hd {
    padding: 40px;
}

.page__bd {
    padding-bottom: 40px;
}

.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft {
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 14px;
}

.green {
    color: #09BB07;
}

.red {
    color: #F76260;
}

.blue {
    color: #10AEFF;
}

.yellow {
    color: #FFBE00;
}

.gray {
    color: #C9C9C9;
}

.strong {
    font-weight: bold;
}

.list-icon {
    vertical-align: middle;
    width: 50rpx;
    height: 50rpx;
}